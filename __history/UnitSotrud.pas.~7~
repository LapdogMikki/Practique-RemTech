unit UnitSotrud;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, Grids, DBGrids, StdCtrls, Mask, DBCtrls;

type
  TFormSotrud = class(TForm)
    DBGrid1: TDBGrid;
    DBEdit1: TDBEdit;
    DBEdit2: TDBEdit;
    DBEdit3: TDBEdit;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    Button4: TButton;
    procedure FormCreate(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure Button4Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormSotrud: TFormSotrud;

implementation

uses UnitDB;

{$R *.dfm}

procedure TFormSotrud.Button1Click(Sender: TObject);
begin
DBModule.ADOSotrud.Insert;
DBEdit1.SetFocus;
end;

procedure TFormSotrud.Button2Click(Sender: TObject);
begin
DBModule.ADOSotrud.Post;
end;

procedure TFormSotrud.Button3Click(Sender: TObject);
begin
 if application.MessageBox(Pchar('Вы действительно хотите удалить запись в таблице?  '),'Внимание!!!',MB_OKCANCEL)=id_ok then
    begin
      DBModule.ADOStatus.delete;
    end;
end;

procedure TFormSotrud.Button4Click(Sender: TObject);
begin
DBModule.ADOSotrud.Cancel;
end;

end.
